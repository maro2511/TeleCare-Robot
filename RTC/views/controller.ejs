    <!-- Page Content -->
    <div class="container" ng-controller="RobotController as rc">
        <br>
        <hr>
        <div class="row">
            <div class="col-md-4">
                <h2>Connection</h2>

                <div class="form-group">
                    <div class="dropdown">
						<select class="btn btn-default" ng-change="rc.connectToRobot(current_robot)" ng-model="current_robot">
							<option ng-repeat="current_robot in rc.users" >{{current_robot}}</option>
						</select>
                    </div>

                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Firebase Server address" id="server_addr" ng-model="firebase_server" ng-init="firebase_server='https://torrid-heat-7030.firebaseio.com/'">
                </div>

                <button id="firebaseConnectButton" class="btn btn-default" ng-click="rc.connectToFirebase(firebase_server)">Connect</button>

            </div>

            <div class="col-md-4">
                <h2 align="center">Move Control</h2>
                <div class="form-group" align="center">
                    <button id="upDirectionButton" class="btn btn-default" ng-click="rc.moveRobot('GO_FORWARD')">Forward</button>
                </div>
                <div class="form-group" align="center">
                    <button id="leftDirectionButton" class="btn btn-default" ng-click="rc.moveRobot('GO_LEFT')">Left</button>
                    <button id="downDirectionButton" class="btn btn-default" ng-click="rc.moveRobot('GO_BACK')">Back</button>
                    <button id="rightDirectionButton" class="btn btn-default" ng-click="rc.moveRobot('GO_RIGHT')">Right</button>
                </div>
                <div class="form-group" align="center">
                    <button style="width: 100%" id="upDirectionButton" class="btn btn-default" ng-click="rc.moveRobot('RETURN_TO_BASE')">Return to base</button>
                </div>

            </div>

            <div class="col-md-4">
                <h2 align="center">Robot Terminal</h2>
                <div class="form-group" align="center">
                    <textarea readonly id="RobotTxtArea" rows="7" style="width: 100%" class="input-group"></textarea>
                </div>
            </div>
        </div>
		
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Telecare Robot Website 2015</p>
                </div>
            </div>
        </footer>

    </div>